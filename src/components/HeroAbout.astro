---
const { surface = "team", tag, headline } = Astro.props;
---

<MainLayout>
<section class="hero">
    <img src="/src/assets/images/teamhero.jpg" alt="Hero image" />
</section>

</MainLayout>

<style>
  @layer components {

   

    .full {
      display: grid;
      grid-template-columns: subgrid;
      grid-column: full;

      > * {
        grid-column: content;
      }
    }

    .container {
      background-image: var(--background-image);
      background-size: cover;
      background-repeat: no-repeat;
      padding: 9rem 0;

      .content-background {
        border-radius: 29px;
        background: rgba(255, 255, 255, 0.85);
        color: var(--color-primary3);
        /* backdrop-filter: blur(5.5px); */
        display: inline-block;
        padding: 3rem 3.75rem;
        max-width: 790px;
        .tag {
          padding: 0px 15px;
          background: var(--color-primary1);
          display: inline-block;
          border-radius: 20px;
        }
      }
    }
  }
</style>