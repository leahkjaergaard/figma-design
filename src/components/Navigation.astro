---
import "../styles/style.css";
import Popover from "../components/Popover.astro";
---

<!-- navigation.astro -->
<header style="z-index: 10;">
  <nav>
    <!-- Navigation menu -->
    <ul>
      <li><a href="#">Home</a></li>
      <li><a href="#">Case Study</a></li>
      <li><a href="#">Team</a></li>
      <li><a href="#">About</a></li>
    </ul>

    <!-- Login Button -->
    <button id="loginBtn" class="login-button">Login</button>
  </nav>
</header>

<!-- Popover komponent: Denne del viser login-formularen -->
<article id="loginPopover" class="popover hidden">
  <h2>Dashboard Login</h2>
  <form name="newsletter" method="POST" data-netlify="true">
    <label for="email" class="email">
      <input type="email" id="email" name="email" required placeholder="Enter Email" />
    </label>
    <label for="password" class="password">
      <input type="password" id="password" name="password" required placeholder="Enter Password" />
    </label>
    <div class="knap">
      <button class="send_buttondiv" type="submit">Go to dashboard</button>
    </div>
  </form>
</article>

<!-- Transparent backdrop til popover -->
<div id="backdrop" class="backdrop hidden"></div>

<style>
  header {
    z-index: 10; /* Sørg for, at headeren har en højere z-index end popover, så den altid vises */
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    background-color: var(--color-primary);
    z-index: 10; /* For at sikre, at navigationsbaren forbliver synlig */
  }

  ul {
    display: flex;
    gap: 20px;
    list-style: none;
  }

  ul li a {
    text-decoration: none;
    color: white;
  }

  .login-button {
    background-color: #f1c40f;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
  }

  /* Popover styling */
  .popover {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: #333;
    color: white;
    padding: 40px;
    border-radius: 8px;
    z-index: 1001;
    max-width: 400px;
    width: 100%;
    box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
  }

  .popover h2 {
    margin-bottom: 20px;
  }

  /* Backdrop styling */
  .backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
  }

  .hidden {
    display: none;
  }

  /* Form styling */
  form {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  input {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
  }

  .send_buttondiv {
    text-align: center;
  }

  button {
    background-color: #f1c40f;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    border: none;
    cursor: pointer;
  }
</style>

<script>
  const loginBtn = document.getElementById('loginBtn');
  const loginPopover = document.getElementById('loginPopover');
  const backdrop = document.getElementById('backdrop');

  // Show the popover and backdrop when login button is clicked
  loginBtn.addEventListener('click', () => {
    loginPopover.classList.toggle('hidden');
    backdrop.classList.toggle('hidden');
  });

  // Hide the popover and backdrop when clicking outside
  backdrop.addEventListener('click', () => {
    loginPopover.classList.add('hidden');
    backdrop.classList.add('hidden');
  });
</script>