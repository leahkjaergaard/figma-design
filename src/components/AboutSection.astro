---
import HeadingButton from "./HeadingButton.astro";
import Tag from "./Tag.astro";
---

<section>
  <div class="wrapper">
    <div class="vision-container">
      <div class="vision-text">
        <Tag style="primary">OUR VISION</Tag>
        <h2>Turn your ideas into reality.</h2>
        <p>
          Capitalize on low hanging fruit to identify a ballpark value added
          activity beta test. Override the digital divide with additional from
          DevOps.
        </p>
        <ul>
          <li>
            Bring to the table win-win survival strategies to ensure proactive
            domination. At the end of the day.
          </li>
          <li>
            Capitalize on low hanging fruit to identify a ballpark value added
            activity to beta test override the digital.
          </li>
        </ul>
      </div>
      <div class="vision-img">
        <img src="../src/assets/images/ourvision.jpg" alt="Vision Image" />
        <div class="decorative-box"></div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    padding: 4rem 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .vision-container {
    display: grid;
    gap: 2rem;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .vision-text {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  h2 {
    color: var(--color-primary3);
    font-size: var(--step-5);
    margin-bottom: 1rem;
  }

  p {
    color: var(--color-text);
    font-size: var(--step-0);
    margin-bottom: 2rem;
  }

  ul {
    list-style: none;
    padding: 0;
  }

  li {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: var(--step-0);
    color: var(--color-text);
  }

  li:before {
    content: "";
    width: 1.6rem;
    height: 1.6rem;
    background: var(--checkmark-icon);
    background-size: contain;
    background-repeat: no-repeat;
  }

  .vision-img {
    position: relative;
  }

  .vision-img img {
    width: 100%;
    border-radius: 1.75rem;
  }

  .decorative-box {
    position: absolute;
    right: -2rem;
    top: -2rem;
    width: 10rem;
    height: 10rem;
    background-color: var(--color-primary2);
    border-radius: 1rem;
    z-index: -1;
    transform: rotate(-15deg);
  }

  @media (max-width: 800px) {
    .vision-container {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .decorative-box {
      display: none;
    }
  }
</style>
