---
const { corevalue } = Astro.props;
const { title, description, link, text } = corevalue;
---

<article class="corevalue-card">
  <h5>{title}</h5>
  <p>{description}</p>
  <a href={link}>{text} &rarr;</a>
</article>

<style>
  @layer components {
    .corevalue-card {
      background: var(--color-card); /* Baggrundsfarve */
      color: var(--color-primary3); /* Tekstfarve */
      text-align: center;
      padding: var(--card-padding); /* Padding fra globale variabler */
      border-radius: var(--card-border-radius); /* Afrundede hjørner */
      box-shadow: none; /* Fjern skygge */
      margin-bottom: var(--card-gap); /* Justér afstand mellem kortene */

      /* Responsiv styling */
      @media (max-width: 600px) {
        padding: var(--space-m);
        margin-bottom: var(--space-m);
      }

      h5 {
        font-size: var(--step-2); /* Størrelse på overskrift */
        font-weight: var(--font-weight-700); /* Fontvægt */
        margin-bottom: 0.5rem;
      }

      p {
        color: var(--color-text); /* Tekstfarve */
        margin-bottom: 1rem;
        font-size: var(--step-0); /* Sørg for, at teksten er tydelig */
      }

      a {
        color: var(--color-primary3); /* Linkfarve */
        text-decoration: none;
        font-weight: var(--font-weight-600); /* Fontvægt for links */
        display: inline-block;
        margin-top: 0.5rem;
      }

      a:hover {
        text-decoration: underline; /* Visuel indikation ved hover */
      }
    }
  }
</style>
