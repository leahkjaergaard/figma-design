---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

const { employee } = Astro.props;
const { img, name, title, description } = employee;

const images = import.meta.glob<{ default: ImageMetadata }>("/src/assets/images/*.{jpeg,jpg,png,gif}");
if (!images[img]) throw new Error(`"${img}" does not exist in glob: "src/assets/images/*.{jpeg,jpg,png,gif}"`);
---

<article class="employee-card">
  <Image src={images[img]()} alt={name} class="employee-image" />
  <h5>{name}</h5>
  <p class="employee-title">{title}</p>
  <p class="employee-description">{description}</p>
  <div class="social-icons">
    <!-- Her kan du tilfÃ¸je sociale ikoner -->
    <!-- <Icon name="instagram" />
    <Icon name="twitter" />
    <Icon name="facebook" /> -->
  </div>
</article>

<style>
  @layer components {
    .employee-card {
      background-color: var(--color-secondary2);
      border-radius: 15px;
      box-shadow: none;
      padding: 1.5rem;
      text-align: center;
      transition: transform 0.3s ease;
      max-width: 350px;
      margin: 0 auto;
    }

    .employee-card:hover {
      transform: translateY(-5px);
    }

    .employee-image {
      width: 100%;
      height: auto;
      border-radius: 20px;
      object-fit: cover;
      margin-bottom: 1.5rem;
    }

    h5 {
      font-size: var(--step-2);
      font-weight: var(--font-weight-700);
      margin-bottom: 0.5rem;
      color: var(--color-primary3);
    }

    .employee-title {
      font-size: var(--step-0);
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .employee-description {
      font-size: var(--step-0);
      color: var(--color-text);
      margin-bottom: 1.5rem;
    }

  }
</style>
