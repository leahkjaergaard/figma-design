---
import Button from "./Button.astro";
---

<section class="case-study-section">
  <div class="case-img">
    <img src="../src/assets/images/case2.jpg" alt="Case Image" />
  </div>

  <div class="case-content">
    <dl class="case-details">
      <div class="case-item">
        <dt>Case Name</dt>
        <dd>Taxes & Efficiency</dd>
      </div>
      <div class="case-item">
        <dt>Category</dt>
        <dd>Business</dd>
      </div>
      <div class="case-item">
        <dt>Date</dt>
        <dd>27th September 2022</dd>
      </div>
    </dl>
    <div class="live-preview-btn">
      <Button
        title="Live Preview"
        textColor="#181818"
        backgroundColor="#FFCC4A"/>
    </div>
  </div>
</section>

<style>
.case-study-section {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 2rem;
  padding: 3rem 0;
}

.case-img img {
  width: 100%;
  max-width: 1000px;
  height: auto;
  border-radius: 16px;
}

.case-content {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  background-color: #181818;
  color: #fff;
  padding: 2rem;
  border-radius: 16px;
  max-width: 1000px;
  width: 100%;
  position: relative;
  top: -50px;
}

.case-details {
  display: flex;
  justify-content: space-between;
  gap: 2rem;
  width: 100%;
}

.case-item {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

dt {
  font-size: var(--step-1);
  font-weight: bold;
  margin-bottom: 0.5rem;
}

dd {
  font-size: var(--step-0);
  color: #ffcc4a;
}

.live-preview-btn {
  margin-top: 1rem;
}

/* Responsive layout adjustments */
@media (max-width: 768px) {
  .case-details {
    flex-direction: column;
    gap: 1rem;
  }

  .case-content {
    padding: 1rem;
    top: -30px;
  }

  .live-preview-btn {
    align-self: center;
  }
}
</style>
