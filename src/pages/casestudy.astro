---
import MainLayout from "../layouts/MainLayout.astro";
import CaseFirstSection from "../components/CaseFirstSection.astro";
import CaseSecondSection from "../components/CaseSecondSection.astro";
import PillHeading from "../components/PillHeading.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Case Study Single">
   <div class="image-container full-width">
    <img src="../src/assets/images/casestudy_hero.jpg" alt="" />
    <div class="head-container">
    <PillHeading title="Case Studies single" />
    <p>Taxes & Efficiency</p>
  </div>
  </div>
  
  <div class="constrained-container">
    <CaseFirstSection />
  </div>

  <div class="full-width">
    <CaseSecondSection />
  </div>

</MainLayout>

<style>

.image-container {
  width: 100%;
  max-height: 500px;
  overflow: hidden;
  position: relative;
}

.image-container img {
  width: 100%;
  height: auto;
}

.head-container {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.85);
  padding: 1rem 2rem;
  border-radius: 12px;
  text-align: center;
}

.head-container p {
  font-size: 1.5rem;
  color: black;
}

/* Constrained layout for the rest of the sections */
.constrained-container {
  width: 90%;
  max-width: 1200px;
  margin: 0 auto;
}

/* Full-width sections */
.full-width {
  width: 100vw;
  margin-left: calc(-50vw + 50%);
}

/* Responsive design adjustments */
@media (max-width: 768px) {
  .head-container {
    padding: 0.5rem 1rem;
  }

  .head-container p {
    font-size: 1.25rem;
  }

  .constrained-container {
    width: 95%;
  }
}
</style>