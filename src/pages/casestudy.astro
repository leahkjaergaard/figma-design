---
import MainLayout from "../layouts/MainLayout.astro";
import CaseFirstSection from "../components/CaseFirstSection.astro";
import CaseSecondSection from "../components/CaseSecondSection.astro";
import PillHeading from "../components/PillHeading.astro";
import Button from "../components/Button.astro";
---

<MainLayout title="Case Study Single">
  <h1>Case Study Sigle</h1>
   <div class="image-container">
    <img src="../src/assets/images/casestudy_hero.jpg" alt="" />
    <div class="head-container">
    <PillHeading title="Case Studies single" />
    <p>Taxes & Efficiency</p>
  </div>
  </div>
  
  <CaseFirstSection />
  <CaseSecondSection />

</MainLayout>

<style>
.image-container {
  width: 100%;
  max-height: 500px;
  overflow: hidden;
  position: relative;
}

.image-container img {
  width: 100%;
  height: auto;
}

.head-container {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(255, 255, 255, 0.85);
  padding: 1rem 2rem;
  border-radius: 12px;
  text-align: center;
}

.head-container p {
  font-size: 1.5rem;
  color: black;
}

/* Responsivt design */
@media (max-width: 768px) {
  .head-container {
    padding: 0.5rem 1rem;
  }

  .head-container p {
    font-size: 1.25rem;
  }
}
  
</style>